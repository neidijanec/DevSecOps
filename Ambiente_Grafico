Máquina: AUDIT

> Procedimentos: 

		# 1ª OPÇÃO: XFCE
		yum -y groupinstall X11
		yum --enablerepo=epel -y groups install "Xfce"
		echo "exec /usr/bin/xfce4-session" >> ~/.xinitrc 

		# 2ª OPÇÃO: FLUXBOX
		yum install epel-release xorg-x11-xinit xorg-x11-server-common xorg-x11-server-devel xorg-x11-drv-evdev xterm -y
		yum install fluxbox -y
		yum -y groupinstall X11
		echo "exec /usr/bin/fluxbox" >> ~/.xinitrc
		startx
